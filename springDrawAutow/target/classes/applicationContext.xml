<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--    <context:component-scan
                base-package="ru.specialist.draw">
       </context:component-scan>-->

    <bean id="centerCoords"
          class="ru.specialist.Coords"
          p:x="0"
          p:y="1"
    >
    </bean>


    <bean id="coordsPoint"
          class="ru.specialist.Coords"
          scope="prototype">
        <constructor-arg value="120"/>
        <constructor-arg value="120"/>
    </bean>


    <bean id="myCoords"
          class="ru.specialist.Coords"
          scope="prototype">
        <constructor-arg value="20"/>
        <constructor-arg value="20"/>
   </bean>

    <bean id="myPoint"
          class="ru.specialist.Point"
          p:coordsPoint-ref="coordsPoint" autowire="constructor"
    >
    </bean>


    <bean id="myCircle"
          class="ru.specialist.Circle"
          p:centerCoords-ref="centerCoords" autowire="constructor"
    >
    </bean>


