<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util.xsd
">

    <bean id="windowBean"
          class="ru.specialist.WoodFrameWindow"
          lazy-init="true"
    />

    <bean id="wall"
          class="ru.specialist.Brick"
          scope="prototype"
          primary="true"
    >
    </bean>
    <bean id="brickBean"
          class="ru.specialist.Brick"
          scope="prototype"
          autowire-candidate="false"
    >
    </bean>
    <bean id="logsBean"
          class="ru.specialist.Wood"
          scope="prototype"
          autowire-candidate="false"
    >
    </bean>
    <bean id="outDoor"
          class="ru.specialist.MetalDoor"
    >
    </bean>
    <bean id="innerDoor"
          class="ru.specialist.WoodDoor"
          scope="prototype"
    >
    </bean>
    <bean id="keySelector"
          class="ru.specialist.KeySelector"
    >
    </bean>
    <bean id="houseBean"
          class="ru.specialist.House"
          p:height="2"
    >

        <!-- p:wall-ref="brickBean"  -->
        <constructor-arg ref="windowBean"/>

        <!--  <constructor-arg value="#{windowBean}" /> -->
        <property name="doors">
            <!--
             <list>
                 <ref bean="outDoor"/>
                 <ref bean="innerDoor"/>
                 <ref bean="innerDoor"/>
             </list>
             -->

            <map>
                <entry key="#{keySelector.getKey(outDoor)}" value-ref="outDoor"/>
                <entry key="#{keySelector.getKey(innerDoor)?.toUpperCase()}" value-ref="innerDoor"/>
                <entry key="#{systemEnvironment['JAVA_HOME']}" value-ref="innerDoor"/>
                <entry key="#{systemProperties['application.home']}" value-ref="innerDoor"/>
            </map>

        </property>


        <property name="wall" ref="logsBean"/>
        <!--
         <property name="height" value="2"/>
         <constructor-arg ref="windowBean">
             <bean class="ru.specialist.Wood" />
         </constructor-arg>
         <property name="wall">
              <bean class="ru.specialist.Wood" />
          </property>
          -->
    </bean>

    <bean id="mainWindowBean"
          class="ru.specialist.MainWindow"
          lazy-init="true"
          init-method="openConnection"
          destroy-method="closeConnection"
          factory-method="getInstance">
    </bean>
    <util:list id="cities">
        <bean class="ru.specialist.City"
              p:name="Chicago" p:state="IL" p:population="2853114"/>
        <bean class="ru.specialist.City"
              p:name="Atlanta" p:state="GA" p:population="537958"/>
        <bean class="ru.specialist.City"
              p:name="Dallas" p:state="TX" p:population="1279910"/>
        <bean class="ru.specialist.City"
              p:name="Houston" p:state="TX" p:population="2242193"/>
        <bean class="ru.specialist.City"
              p:name="Odessa" p:state="TX" p:population="90943"/>
        <bean class="ru.specialist.City"
              p:name="El Paso" p:state="TX" p:population="613190"/>
        <bean class="ru.specialist.City"
              p:name="Jal" p:state="NM" p:population="1996"/>
        <bean class="ru.specialist.City"
              p:name="Las Cruces" p:state="NM" p:population="91865"/>
    </util:list>
    <bean id="trooper"
          class="ru.specialist.Trooper" abstract="true">
        <property name="instrument" value="пианино"/>
        <property name="song" value="соната"/>
    </bean>
