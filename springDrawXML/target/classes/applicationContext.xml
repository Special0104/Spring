    <bean id="myPoint"
          class="ru.specialist.Point"
          scope="prototype">
        <constructor-arg value="100"/>
        <constructor-arg value="200"/>
    </bean>

    <bean id="myCircle"
          class="ru.specialist.Circle"
          scope="prototype">
        <constructor-arg ref="myPoint"/>
        <constructor-arg value="300"/>
   </bean>


    <bean id="myScene" class="ru.specialist.Scene">
        <property name="color" value="white"/>
        <property name="objects">
            <list>
                <ref bean="myCircle"/>
                <ref bean="myPoint"/>
                <ref bean="myCircle"/>
            </list>
        </property>
    </bean>


</beans>